.ma-close{
    border: 0;
    padding: 0;
    position: absolute;
    top: 0;
    right: 0;
}
.trigger{
    position:fixed;
}
.trigger .img{
    width:100%;
    height:auto;
    vertical-align: middle;
}
.small-trigger{
    width:64px;
}
.small-trigger .ma-close{
    width:16px;
    height:16px;
    /* top:-8px;
