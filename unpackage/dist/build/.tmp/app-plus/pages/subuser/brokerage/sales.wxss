.content .c-top {
  width: 100%;
  height: 180rpx;
  background-color: #EF7C38;
  color: #FFFFFF;
  text-align: center;
}
.content .c-top .t-money {
  font-size: 40rpx;
  padding-top: 58rpx;
}
.content .c-top .t-text {
  font-size: 24rpx;
  margin-top: 5rpx;
}
.content ._hr {
  height: 1rpx;
  border: none;
  border-top: 1px solid #F4F4F4;
}
.content .line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 30rpx;
}
.content .line .line-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .line .line-left image {
  width: 39rpx;
  height: 39rpx;
  margin-right: 10rpx;
}
.content .line .line-left text {
  font-size: 24rpx;
}
.content .line .line-right {
  font-size: 28rpx;
  color: #F2221F;
}
.content .title {
  font-size: 28rpx;
  color: #333333;
  padding: 70rpx 0 30rpx 22rpx;
}
.content .explain {
  font-size: 24rpx;
  color: #666666;
  padding: 10rpx 20rpx;
}
.content .explain text {
  color: #F2221F;
  letter-spacing: 5rpx;
}
.content .btn {
  width: 687rpx;
  height: 80rpx;
  background: #d80000;
  border-radius: 40px;
  text-align: center;
  line-height: 80rpx;
  color: #FFFFFF;
  margin: 50rpx auto 0;
