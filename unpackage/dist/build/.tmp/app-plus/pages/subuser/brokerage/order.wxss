page {
  background: #F6F6F7;
}
.order_top {
  width: 750rpx;
  height: 158rpx;
  background: -webkit-linear-gradient(left, #f74c4a, #f56e6a);
  background: linear-gradient(90deg, #f74c4a, #f56e6a);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
