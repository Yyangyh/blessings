          align-items: center;
  font-size: 28rpx;
  color: #FFFFFF;
}
.order_top .top_box view {
    margin: 5rpx;
}
.allorder {
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  background-color: #FFFFFF;
}
.allorder text {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.active {
  color: #D80000;
}
.box .line {
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F1F1F1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 30rpx 20rpx;
}
.box .line .l_left {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.box .line .l_left image {
      width: 100rpx;
      height: 100rpx;
      margin-right: 24rpx;
      border-radius: 50%;
}
.box .line .l_left .left_text view:first-child {
      font-size: 28rpx;
}
.box .line .l_left .left_text view:last-child {
      font-size: 24rpx;
      color: #999999;
}
.box .line .middle {
    width: 1rpx;
    height: 81rpx;
    background: #cccccc;
}
.box .line .l_right {
    font-size: 24rpx;
    text-align: center;
}
.box .line .l_right view {
      margin: 2rpx 0;
}
.box .particulars {
  padding: 0 20rpx;
}
.box .particulars .lines {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 24rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    color: #333333;
}
.box .particulars .lines view {
      width: 125rpx;
      margin: 12rpx 0;
}
.base {
  font-size: 24rpx;
  color: #999999;
