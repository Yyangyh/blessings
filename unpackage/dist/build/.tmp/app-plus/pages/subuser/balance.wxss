.content {
  position: relative;
}
.content .top {
    height: 105rpx;
    padding: 0 44rpx;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    top: var(--status-bar-height);
    z-index: 333;
    left: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    background: #fff;
    box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.1);
}
.content .top .top_enlarge {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 100%;
      width: 180rpx;
}
.content .top text:nth-of-type(2) {
      width: 180rpx;
      font-size: 30rpx;
      font-weight: 400;
      display: inline-block;
      text-align: right;
}
.content .top image {
      height: 40rpx;
      width: 40rpx;
}
.content .black {
    width: 100%;
    height: 209rpx;
    position: absolute;
    top: 106rpx;
    left: 0;
    z-index: 100;
}
.content .money {
    width: 100%;
    position: absolute;
    top: 106rpx;
    z-index: 111;
    color: #FFFFFF;
    text-align: center;
    padding-top: 40rpx;
}
.content .money view:first-child {
      font-size: 24rpx;
      text-align: center;
}
.content .money view:last-child {
      font-size: 60rpx;
      margin-top: 15rpx;
}
.content .allorder {
    width: 100%;
    height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
    position: absolute;
    top: 300rpx;
    left: 0;
    border-bottom: 1rpx solid #E9E9E9;
    z-index: 222;
    background: #fff;
}
.content .allorder text {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
.content .active {
    color: #D80000;
    border-bottom: 1rpx solid #D80000;
}
.content .box {
    width: 100%;
    position: absolute;
    top: 400rpx;
    left: 0;
}
.content .box .line {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      padding: 31rpx;
      border-bottom: 1rpx solid #E9E9E9;
}
.content .box .line .l_left view:first-child {
        font-size: 28rpx;
        color: #343434;
}
.content .box .line .l_left view:last-child {
        font-size: 24rpx;
        color: #A1A1A1;
        margin-top: 10rpx;
}
.content .box .line .l_right {
        font-size: 30rpx;
        color: #0C0C0C;
        margin-left: 20rpx;
}

