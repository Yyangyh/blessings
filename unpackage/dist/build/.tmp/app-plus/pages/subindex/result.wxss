.worp {
  width: 100%;
  height: 813rpx;
  position: relative;
}
.worp .worp_box {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 99;
}
.worp .worp_box .title {
      font-size: 32rpx;
      color: #FFFFFF;
      text-align: center;
      padding-top: 82rpx;
}
.worp .worp_box .texts {
      font-size: 26rpx;
      text-indent: 2em;
      margin: 50rpx 107rpx 0;
}
.worp .word_img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 98;
}
.worp .word_img image {
      width: 100%;
      height: 800rpx;
}
