page {
	/* height: 100%;
	width: 100%; */
	padding-top: var(--status-bar-height);
	background: #fff;
}
.content {
	padding-top: 105rpx;
}
.status_bar {
	height: var(--status-bar-height);
	width: 100%;
	top: 0;
	left: 0;
	z-index: 998;
	background: #fff;
	position: fixed;
}
.red_button{
	font-size: 32rpx;
	background: #D80000;
	color: #FFFFFF;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 40rpx;
}
.mask_black {
	position: fixed;
	height: 100%;
	width: 100%;
	background: rgba(0, 0, 0, 1);
	opacity: 0.5;
	top: 0;
	left: 0;
	z-index: 888;
}


