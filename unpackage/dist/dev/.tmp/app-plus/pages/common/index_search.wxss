.content_top {
  position: fixed;
  top: var(--status-bar-height);
  left: 0;
  width: 100%;
  background: #FFFFFF;
  z-index: 99;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 105rpx;
  padding: 0 20rpx;
}
.content_top .top_search {
  -webkit-box-flex: 2;
  -webkit-flex-grow: 2;
          flex-grow: 2;
  height: 65rpx;
  border-radius: 65rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-left: 40rpx;
  background: #EEEEEE;
  font-size: 24rpx;
  color: #999;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border: 1rpx solid #FE0000;
}
.content_top .top_img {
  position: relative;
}
.content_top .top_img view {
  position: absolute;
  right: -10rpx;
  top: -4rpx;
  height: 30rpx;
  width: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 24rpx;
  background: #D80000;
}
.content_top image {
  height: 50rpx;
  width: 50rpx;
  margin-left: 10rpx;
}

