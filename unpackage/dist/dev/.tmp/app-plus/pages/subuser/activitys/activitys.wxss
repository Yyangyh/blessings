.top {
  height: 105rpx;
  padding: 0 44rpx;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: var(--status-bar-height);
  z-index: 99;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  background: #fff;
  box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.1);
}
.top .top_enlarge {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 100%;
    width: 180rpx;
}
.top text:nth-of-type(2) {
    width: 180rpx;
    display: inline-block;
}
.top image {
    height: 40rpx;
    width: 40rpx;
}
.allorder {
  width: 100%;
  height: 100rpx;
  background-color: #F6F6F7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  line-height: 120rpx;
  font-size: 32rpx;
}
.allorder text {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.active {
  color: #D80000;
}
.quan {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  border-bottom: 1rpx solid #F4F4F4;
}
.quan image {
    width: 276rpx;
    height: 188rpx;
    padding: 30rpx 32rpx 30rpx 20rpx;
    display: block;
}
.quan .q_right {
    padding-right: 30rpx;
}
.quan .q_right view:first-child {
      font-size: 28rpx;
      color: #333333;
      margin-bottom: 20rpx;
}
.quan .q_right view:last-child {
      font-size: 32rpx;
      color: #D80000;
}

