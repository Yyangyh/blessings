.content {
  position: relative;
  padding-top: calc(205rpx + var(--status-bar-height));
}
.content .top {
    position: fixed;
    width: 100%;
    z-index: 1000;
    box-sizing: border-box;
    top: var(--status-bar-height);
    left: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 105rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background-color: #FFFFFF;
}
.content .top image:first-child {
      width: 31rpx;
      height: 31rpx;
}
.content .top image:last-child {
      width: 50rpx;
      height: 50rpx;
}
.content .tran_none {
    -webkit-transform: rotate(-180deg);
            transform: rotate(-180deg);
}
.content .tran_show {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
.content .tab_list image {
    height: 11rpx;
    width: 19rpx;
    margin-left: 14rpx;
}
.content .down_box {
    position: fixed;
    top: calc(var(--status-bar-height) + 205rpx);
    left: 0;
    width: 100%;
    z-index: 998;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-transition: .3s;
    transition: .3s;
    -webkit-transform: translateY(-100%);
            transform: translateY(-100%);
    background: #FFFFFF;
    font-size: 28rpx;
    padding: 40rpx 20rpx;
}
.content .down_box .list_box {
      width: 33.3%;
}
.content .down_box .list_box .down_list {
        width: 180rpx;
        height: 60rpx;
        line-height: 60rpx;
        border-radius: 60rpx;
        background: #F1F1F1;
        text-align: center;
        margin: 15rpx auto;
}
.content .down_box .list_box:after {
        content: "";
        width: 33.3%;
}
.content .down_box .list_box:nth-of-type(1) .down_list {
        color: #D80000;
}
.texts_boxList .t_box {
  padding: 20rpx 25rpx 20rpx 25rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.texts_boxList .t_box image {
    width: 268rpx;
    height: 179rpx;
    margin-right: 30rpx;
}
.texts_boxList .t_box .b_right view:first-child {
    font-size: 24rpx;
    margin: 20rpx 0;
}
.texts_boxList .t_box .b_right view:last-child {
    font-size: 24rpx;
