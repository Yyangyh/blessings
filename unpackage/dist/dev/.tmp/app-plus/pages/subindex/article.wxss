.area {
  width: 100%;
  height: 120rpx;
  background: pink;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0;
}
.area input {
    width: 530rpx;
    height: 70rpx;
    background: white;
    border: 1rpx solid #999999;
    border-radius: 35rpx;
    font-size: 24rpx;
    color: #999999;
    padding-left: 31rpx;
    margin: 0 30rpx;
}
.area .send {
    width: 100rpx;
    height: 60rpx;
    background: -webkit-linear-gradient(left, #f74c4a, #f56e6a);
