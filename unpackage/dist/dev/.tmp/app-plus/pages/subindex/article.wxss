.top {
  position: fixed;
  width: 100%;
  z-index: 886;
  box-sizing: border-box;
  top: var(--status-bar-height);
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 105rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #FFFFFF;
}
.top image:first-child {
    width: 31rpx;
    height: 31rpx;
}
.top image:last-child {
    width: 50rpx;
    height: 50rpx;
}
._hr {
  border: none;
  height: 1rpx;
  border-bottom: 1rpx solid #F6F6F7;
}
.title_top {
  width: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.title_top .title {
    font-size: 28rpx;
    padding: 33rpx 20rpx 20rpx 20rpx;
}
.title_top .times {
    font-size: 24rpx;
    color: #999999;
    margin: 0 0 25rpx 0;
    padding-left: 20rpx;
}
.title_top .graded {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-left: 20rpx;
}
.title_top .graded .start {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.title_top .graded .start image {
        width: 25rpx;
        height: 25rpx;
        margin-right: 12rpx;
}
.title_top .graded .time {
      font-size: 24rpx;
      color: #999999;
      margin-right: 10rpx;
}
.title_top .t_right {
    width: 44rpx;
